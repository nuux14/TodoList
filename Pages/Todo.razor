@page "/todo"

<h3>Todo</h3> 
<ul style="list-style-type: none">
    @foreach(var item in todos){
        <li>  
            <input type="checkbox" @bind="item.IsDone" />
            <span style="text-decoration:@(item.IsDone?"overline red":"unset")"> @item.Title </span>
            @* //<button @onclick="RemoveTask(item.Title)">X</button> *@
        </li>
    }
</ul>

<h3>Todo @todos.Count(todo => !todo.IsDone)</h3>
 
 <h4> Add To do item</h4>
 <input @bind="newTodo" placeholder="Add a task" />
 
 <button @onclick="AddItem">Add Task</button>

@code {
    private string? newTodo="First task or";
    private List<TodoItem> todos {get;set;} = new();
    
    void AddItem(){
       if(!string.IsNullOrWhiteSpace(newTodo)){
         todos.Add( new TodoItem{ Title = newTodo});
         newTodo = string.Empty;
       }
    }
    void RemoveTask(string title){
        TodoItem it = todos.FirstOrDefault(t=>t.Title == title);
        todos.Remove(it);
    }
    }



